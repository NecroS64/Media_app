<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/templ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">

            <LinearLayout
                android:id="@+id/name_param"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Копирайтер" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дизайнер" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тема" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/valueLL"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="10sp"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/copy_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="none"
                    tools:layout_margin="0sp" />

                <TextView
                    android:id="@+id/desi_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="none"
                    tools:layout_margin="0sp" />

                <TextView
                    android:id="@+id/theme_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:text="none" />

                <TextView
                    android:id="@+id/description_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="none"
                    tools:layout_margin="0sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/copy_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_red" />

                <View
                    android:id="@+id/desi_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_yellow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag_time"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tag_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/time_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="none"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/date_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dopButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:visibility="visible">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>